    {
        "id": "filter_heater",
        "type": "function",
        "z": "heating_tab",
        "name": "Process Heater Command",
        "func": "// Only process messages for heater devices\nif (!msg.payload.device_id) {\n    return null;\n}\n\nconst deviceId = msg.payload.device_id;\nconst state = msg.payload.state;\nconst targetTemp = msg.payload.temperature || 20;\n\n// Store heater state\ncontext.set(`heater_${deviceId}_state`, state);\ncontext.set(`heater_${deviceId}_target`, targetTemp);\n\nnode.status({\n    fill: state === 'on' ? 'red' : 'green',\n    shape: 'dot',\n    text: `Device ${deviceId}: ${state.toUpperCase()} (${targetTemp}¬∞C)`\n});\n\nreturn msg;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 400,
        "y": 360,
        "wires": [
            [
                "heater_status",
                "debug_heater"
            ]
        ]
    },
    {
        "id": "heater_status",
        "type": "function",
        "z": "heating_tab",
        "name": "Heater Status Response",
        "func": "// Simulate heater response\nconst deviceId = msg.payload.device_id;\nconst state = msg.payload.state;\nconst targetTemp = msg.payload.temperature || 20;\n\n// Get current temp from context (from sensor)\nconst currentTemp = context.get('current_temp') || 20;\n\nmsg.payload = {\n    device_id: deviceId,\n    state: state,\n    target_temperature: targetTemp,\n    current_temperature: currentTemp,\n    power_consumption: state === 'on' ? 2000 : 0,\n    action: \"status\",\n    timestamp: new Date().toISOString()\n};\n\nreturn msg;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
